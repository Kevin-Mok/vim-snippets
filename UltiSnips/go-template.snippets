snippet arch "if arch" b
{{ if eq .chezmoi.osRelease.id "arch" }}
{{ end }}
endsnippet

snippet ntr "if not termux" b
{{ if not (eq .linux_os "termux") }}
{{ end }}
endsnippet

snippet nz "if nzxt" b
{{ if eq .chezmoi.fullHostname "nzxt" }}
{{ end }}
endsnippet

snippet lap "if laptop" b
{{ if eq .chezmoi.fullHostname "x1-carbon" }}
{{ end }}
endsnippet

snippet ngu "if not gui" b
{{ if not .gui }}
{{ end }}
endsnippet

snippet root "if root" b
{{ if eq .chezmoi.username "root" }}
{{ end }}
endsnippet

snippet dbrt "if debian and root" b
{{ if and (eq .chezmoi.username "root") (eq .linux_os "debian") }}
{{ end }}
endsnippet

